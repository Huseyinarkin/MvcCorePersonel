@model MvcSite.Models.Departmanlar
@{
    Layout = "~/Views/Shared/_LayoutTest.cshtml";
}
@using (Html.BeginForm("DepartmanGuncelle", "Departman", FormMethod.Post))
{
    @Html.LabelFor(x => x.ID)
    @Html.TextBoxFor(x => x.ID, new { @class = "form-control", @readonly = "readonly=readonly" })
    <br />
    @Html.LabelFor(x => x.DepartmanAdi)
    @Html.TextBoxFor(x => x.DepartmanAdi, new { @class = "form-control" })
    <br />
    <button class="btn btn-outline-success">Güncelle</button>
}
