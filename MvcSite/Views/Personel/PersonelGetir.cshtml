@model MvcSite.Models.Personel
@{    
    Layout = "~/Views/Shared/_LayoutTest.cshtml";
}
@using (Html.BeginForm("PersonelGuncelle", "Personel", FormMethod.Post))
{
    @Html.LabelFor(x => x.ID)
    @Html.TextBoxFor(x => x.ID, new { @class = "form-control", @readonly = "readonly=readonly" })
    <br />
    @Html.LabelFor(x => x.Ad)
    @Html.TextBoxFor(x => x.Ad, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.SoyAd)
    @Html.TextBoxFor(x => x.SoyAd, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Sehir)
    @Html.TextBoxFor(x => x.Sehir, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.DepartmanlarID)
    @Html.TextBoxFor(x => x.DepartmanlarID, new { @class = "form-control" })
    <br />
    <button class="btn btn-outline-success">Güncelle</button>
}
